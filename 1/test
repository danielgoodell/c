#include <stdio.h>
/* here are some quotes! */
int main(void){
	bool insidecomment = false;
	bool insidequotes = false;
	bool insidedoublequotes = false;
	char c;
// Here is a one line quote
	while((c=getchar()) != EOF){
		if(c == '\"' && insidedoublequotes == false){
			putchar(c);
			insidequotes=true;}
		if(c == '\'' && insidequotes== false){
			putchar(c);
			insidequotes=true;}
		if(c == '\"' && insidedoublequotes == true){ // another one line quote.
			putchar(c);
			insidedoublequotes=false;}
		if(c == '\'' && insidequotes== true){
			putchar(c);
			insidequotes=false;}
		if(c == '\' and (insidequotes || insidedoublequotes) == false){
			if((c=getchar()) == '/'){
				insidecomment = true;
				while((c = getchar()) != '\n')
					;
				putchar('\n');}
			else if(c=getchar() == '*'){
				insidecomment == true;
				while(insidecomment == true){
					while ((c=getchar()) != ('*' || EOF))
						putchar(c);
					if(c = getchar() == '/')
						insidecomment = false;
					else{
						putchar('*');
						printf("/* I can put quotes inside here */");
						printf("// and it shouldn't be affected");'
						printf('/* I can put quotes inside here */');
						printf('// and it shouldn\'t be affected');
				}
			}
		}
		else
			putchar(c);
	}
}
// Can a quote end the file?
